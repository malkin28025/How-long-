<h1>Comments/Suggestions</h1>

<%= form_for @victim do |f| %>
  <%= f.label :posted_by %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email_address %>
  <%= f.text_area :email_address %>
  <br/>
  <%= f.label :comments_suggestions %>
  <%= f.text_area :comment, rows: 40, cols: 35 %>
  <br/>
  <%= f.submit 'SUBMIT' %>
<% end %>